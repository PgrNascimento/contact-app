<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_contact_item_name"
        android:hint="Nome"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/floatingActionButton"
        android:layout_toLeftOf="@+id/floatingActionButton" />

    <TextView
        android:hint="Telefone"
        android:id="@+id/tv_contact_item_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/tv_contact_item_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tv_contact_item_name"
        android:layout_alignEnd="@+id/tv_contact_item_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"></View>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_clear_white_24dp"
        android:id="@+id/bt_remove"
        android:layout_above="@+id/tv_contact_item_phone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>